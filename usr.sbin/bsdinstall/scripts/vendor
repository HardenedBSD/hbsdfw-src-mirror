############################################################ INCLUDES

BSDCFG_SHARE="/usr/share/bsdconfig"
. $BSDCFG_SHARE/common.subr || exit 1
f_include $BSDCFG_SHARE/pkgbase.subr || exit 1

############################################################

# Install pkg into the new root
pkg_list="pkg p74-hbsdfw-core python38 beep"
f_pkginstall "HBSDFW Firewall Core" "$pkg_list"

mkdir -p ${BSDINSTALL_CHROOT}/hbsdfw-installer-pkgs

# XXX (2022-06-15 swebb): Completely ugly hack to force installation of
# otherwise missing packages. On the plus side, this allows us to cache the
# packages that were included in the original install image.
cp -R /usr/freebsd-dist/hbsdfw/ ${BSDINSTALL_CHROOT}/hbsdfw-installer-pkgs/
chroot ${BSDINSTALL_CHROOT} find /hbsdfw-installer-pkgs/All -name \*.pkg | xargs chroot ${BSDINSTALL_CHROOT} pkg add -fM

# TODO add this to the mtree files
mkdir -p ${BSDINSTALL_CHROOT}/conf
mkdir -p ${BSDINSTALL_CHROOT}/var/etc
mkdir -p ${BSDINSTALL_CHROOT}/usr/local/etc/

# TODO ?? don't know yet
cp /conf/config.xml ${BSDINSTALL_CHROOT}/usr/local/etc/config.xml
cp ${BSDINSTALL_CHROOT}/usr/local/etc/pkg/repos/FreeBSD.conf.sample ${BSDINSTALL_CHROOT}/usr/local/etc/pkg/repos/FreeBSD.conf

# Select the console
echo 'boot_multicons="YES"' >> ${BSDINSTALL_CHROOT}/boot/loader.conf.local
echo 'boot_serial="YES"' >> ${BSDINSTALL_CHROOT}/boot/loader.conf.local
echo 'comconsole_speed=115200' >> ${BSDINSTALL_CHROOT}/boot/loader.conf.local
echo 'console=comconsole' >> ${BSDINSTALL_CHROOT}/boot/loader.conf.local


#read -p "Press <CR> to continue... " NOVALUE
